<?xml version="1.0" encoding="utf-8"?>
<!-- layout/res/layout/activity_paste_text.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="180dp"
    android:layout_marginBottom="64dp"
    android:background="@color/backgroundPurple">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/massage" />

        <!-- multiâ€‘line text box -->
        <EditText
            android:id="@+id/longTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="6"
            android:maxLines="10"
            android:layout_marginTop="8dp"
            android:hint="@string/paste_text_here"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/near_white"
            android:background="@drawable/bg_light_purple"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- thin white underline below the EditText -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/submit_for_analysis" />

    </LinearLayout>
</FrameLayout>
