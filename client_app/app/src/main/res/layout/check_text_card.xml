<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundPurple"
    android:clipToPadding="false"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="150dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="34dp">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/massage" />

        <!-- fixed-height multiline input with internal scroll -->
        <EditText
            android:id="@+id/longTextInput"
            android:layout_width="match_parent"
            android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:hint="@string/paste_text_here"
        android:gravity="top|start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/near_white"
        android:background="@drawable/bg_light_purple"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
        android:text="@string/submit_for_analysis" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
