<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPurple"
    android:layoutDirection="ltr"
    android:padding="20dp">

    <!-- Top card: centered horizontally near top -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLinkClicked"
        android:layout_width="193dp"
        android:layout_height="157dp"
        android:layout_marginTop="156dp"
        app:cardBackgroundColor="@color/card_selected_background"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keep content flexible; avoid fixed dp sizes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Row: icon + title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/link"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tvLinkClicked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link clicked"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Compact CTA button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="36dp"
                android:text="Check if the app is the default browser"
                android:textSize="12sp"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main vertical arrow: centered under top card -->
    <ImageView
        android:id="@+id/ivArrowDown"
        android:layout_width="45dp"
        android:layout_height="243dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/long_arrow"
        app:layout_constraintTop_toBottomOf="@id/cardLinkClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <!-- Card "Opens in": centered under the arrow -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOpensIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_selected_background"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/ivArrowDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opens in:"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/btnChosenBrowser"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/browser"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Left info panel: to the LEFT of the main arrow, vertically centered to it -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stripLocalAnalysis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivArrowDown"
        app:layout_constraintTop_toTopOf="@id/ivArrowDown"
        app:layout_constraintBottom_toBottomOf="@id/ivArrowDown"
        android:translationY="-15dp">

        <!-- Stack content vertically & center -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/shield"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="balanced"
                android:gravity="center"
                android:hyphenationFrequency="none"
                android:paddingBottom="6dp"
                android:text="Instant on-device URL analysis"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateDbNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:breakStrategy="balanced"
                android:ellipsize="end"
                android:hyphenationFrequency="none"
                android:maxLines="2"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Update local database"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="9sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Right of main arrow: container so the two branch arrows can be very close / overlap -->

    <!-- Right toggles panel: right of the branch arrows, vertically centered to them -->

    <FrameLayout
        android:id="@+id/branchContainer"
        android:layout_width="71dp"
        android:layout_height="154dp"
        app:layout_constraintBottom_toTopOf="@id/cardOpensIn"
        app:layout_constraintEnd_toStartOf="@id/panelToggles"
        app:layout_constraintStart_toEndOf="@id/ivArrowDown"
        app:layout_constraintTop_toBottomOf="@id/cardLinkClicked"
        app:layout_constraintVertical_bias="0.495">

        <!-- Upper short arrow (can overlap) -->
        <ImageView
            android:id="@+id/ivArrowBranchRight"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/arrow_right"
            android:translationX="0dp"
            app:tint="@android:color/white" />

        <!-- Lower curved arrow -->
        <ImageView
            android:id="@+id/ivArrowBranchLeft"
            android:layout_width="52dp"
            android:layout_height="66dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="15dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/arrow_left"
            android:translationX="0dp"
            app:tint="@android:color/white" />
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelToggles"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:maxWidth="260dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="24dp"
        app:layout_constraintStart_toEndOf="@id/branchContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/branchContainer"
        android:translationY="-30dp">  <!-- lift a bit; tweak -4dp/-8dp to taste -->

        <!-- content -->
        <LinearLayout
            android:id="@+id/togglesContent"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <!-- Row 1: Remote link check + switch on the right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/cloud_icon"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:breakStrategy="balanced"
                    android:ellipsize="end"
                    android:hyphenationFrequency="none"
                    android:maxLines="2"
                    android:text="Remote link check"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="6dp" />

            <!-- Row 2: Remote message check + switch on the right -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchCloudLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/message"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:breakStrategy="balanced"
                    android:ellipsize="end"
                    android:hyphenationFrequency="none"
                    android:maxLines="3"
                    android:text="Remote message check"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMsgCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="true" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
